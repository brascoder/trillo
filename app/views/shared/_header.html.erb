<header class="header">
  <%= image_tag asset_pack_path("img/logo.png"), alt: "trillo logo", class: "logo" %>
  <%= form_with url: "#", class: "search" do %>
    <%= text_field_tag :search, nil, class: "search__input", placeholder: "Search hotels" %>
    <button class="search__button">
      <svg class="search__icon">
        <use xlink:href="<%= asset_pack_path("img/sprite.svg")  %>#icon-magnifying-glass"></use>
      </svg>
    </button>
  <% end %>

  <nav class="user-nav">
    <div class="user-nav__icon-box">
      <svg class="user-nav__icon">
        <use xlink:href="<%= asset_pack_path("img/sprite.svg") %>#icon-bookmark"></use>
      </svg>
      <span class="user-nav__notification">7</span>
    </div>
    <div class="user-nav__icon-box">
      <svg class="user-nav__icon">
        <use xlink:href="<%= asset_pack_path("img/sprite.svg") %>#icon-chat"></use>
      </svg>
      <span class="user-nav__notification">13</span>
    </div>
    <div class="user-nav__user">
      <%= image_tag asset_pack_path("img/user.jpg"), alt: "user photo", class: "user-nav__user-photo" %>
      <span class="user-nav__user-name">Jonas</span>
    </div>
  </nav>
</header>
